            <ComboBoxItem>Supervisor</ComboBoxItem>

        </ComboBox>
            <Label Content="Account Type:" HorizontalAlignment="Left" Margin="44,89,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
