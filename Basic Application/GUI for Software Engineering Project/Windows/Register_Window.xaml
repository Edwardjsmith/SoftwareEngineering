        mc:Ignorable="d"
        Title="Register" Height="362.8" Width="395.2">
    <Grid>
        <Label Content="Username;" HorizontalAlignment="Left" Margin="44,67,0,0" VerticalAlignment="Top"/>
        <Label Content="E-Mail:" HorizontalAlignment="Left" Margin="44,120,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="44,146,0,0" VerticalAlignment="Top"/>
        <Label Content="Reenter Password:" HorizontalAlignment="Left" Margin="44,177,0,0" VerticalAlignment="Top"/>
